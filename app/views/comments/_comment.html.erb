<div id="<%= dom_id comment %>">
  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>

  <p>
    <strong>User:</strong>
    <%= comment.user.name %> with ID <%= comment.user_id %>
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post.title %> with ID <%= comment.post_id %>
  </p>

</div>
